<h2>
  Add a new movie
</h2>

<form action="/movies" method="post" data-turbo="false">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <div>
    <label for="title_box">
      Title
    </label>

    <input type="text" id="title_box" name="query_title">
  </div>

  <div>
    <label for="description_box">
      Description
    </label>

    <input type="text" id="description_box" name="query_description">
  </div>

  <div>
    <label for="released_box">
      Released
    </label>

    <input type="text" id="released_box" name="query_released">
  </div>

  <button>
    Create Movie
  </button>
</form>
