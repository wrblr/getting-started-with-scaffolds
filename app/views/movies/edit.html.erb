<h2>
  Edit movie
</h2>

<form action="/movies/<%= @the_movie.id %>"  method="post" data-turbo="false" >
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <input type="hidden" name="_method" value="patch">
  <div>
    <label for="title_box">
      Title
    </label>

    <input type="text" id="title_box" name="query_title" value="<%= @the_movie.title %>">
  </div>

  <div>
    <label for="description_box">
      Description
    </label>

    <input type="text" id="description_box" name="query_description" value="<%= @the_movie.description %>">
  </div>

  <div>
    <label for="released_box">
      Released
    </label>

    <input type="text" id="released_box" name="query_released" value="<%= @the_movie.released %>">
  </div>

  <button>
    Update movie
  </button>
</form>
